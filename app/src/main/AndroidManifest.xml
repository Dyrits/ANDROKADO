        android:supportsRtl="true"
        android:theme="@style/AndroKado"
        tools:ignore="AllowBackup">
        <activity android:name=".ListContactsActivity"></activity>
        <activity android:name=".ArticleFormActivity" />
        <activity android:name=".ConfigurationActivity" />
        <activity android:name=".ListArticlesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".InfoURLActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>