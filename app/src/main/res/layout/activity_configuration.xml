<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigurationActivity">
    <TextView
        android:id="@+id/sort_price_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sort_price_fr"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sort_price_SC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        app:layout_constraintBaseline_toBaselineOf="@id/sort_price_TV"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/sort_price_TV"
        />
    <TextView
        android:id="@+id/default_price_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_price_fr"
        app:layout_constraintBaseline_toBaselineOf="@id/default_price_ET"
        app:layout_constraintStart_toStartOf="@id/sort_price_TV"
        />
    <EditText
        android:id="@+id/default_price_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="6"
        app:layout_constraintTop_toBottomOf="@id/sort_price_SC"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="@id/sort_price_SC"
        app:layout_constraintWidth_percent="0.1"
        tools:ignore="Autofill,LabelFor" />
</androidx.constraintlayout.widget.ConstraintLayout>